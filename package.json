{
	"name": "eden-tanstack-query",
	"private": true,
	"type": "module",
	"packageManager": "bun@1.3.3",
	"workspaces": [
		"packages/*",
		"examples/*"
	],
	"scripts": {
		"dev": "bun run --filter=* dev",
		"build": "bun run --filter=@eden-tanstack-query/* build",
		"example:basic": "bun run --filter=@eden-tanstack-query/example-basic dev",
		"test": "bun test",
		"test:ui": "vitest --ui",
		"test:types": "bunx tsc --noEmit",
		"test:all": "bun run test && bun run test:types",
		"lint": "bunx biome check .",
		"lint:fix": "bunx biome check --write .",
		"format": "bunx biome format --write ."
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@testing-library/jest-dom": "^6.6.0",
		"@testing-library/react": "^16.3.0",
		"@types/bun": "latest",
		"@vitest/ui": "^4.0.15",
		"happy-dom": "^18.0.0",
		"typescript": "^5.9.3",
		"vitest": "^4.0.15"
	}
}
